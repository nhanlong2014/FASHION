<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/lineCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EEF6F8"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/drew" />

                <TextView
                    android:id="@+id/tvTenCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/imgCart"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Vans Old School"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGiaTienCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTenCart"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@id/imgCart"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Ä‘ 1.800.000" />
                <ImageView
                    android:id="@+id/delete"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:layout_below="@id/delete"
                    android:text="Add to cart"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_cart"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>